<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/textMyName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="30dp"
        android:layout_marginTop="40dp"
        android:text="Enter your name:"
        android:textSize="24sp"
        />

    <TextView
        android:id="@+id/textMyAge"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textMyName"
        android:layout_alignParentStart="true"
        android:layout_marginStart="30dp"
        android:layout_marginTop="40dp"
        android:text="Enter your age:"
        android:textSize="24sp"/>

    <EditText
        android:id="@+id/myName"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginStart="5dp"
        android:layout_marginTop="39dp"
        android:layout_toEndOf="@+id/textMyName"
        android:text="" />

    <EditText
        android:id="@+id/myAge"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/myName"
        android:layout_marginStart="25dp"
        android:layout_marginTop="20dp"
        android:layout_toEndOf="@+id/textMyAge" />

    <Button
        android:layout_width="320dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textMyAge"
        android:layout_alignParentStart="true"
        android:layout_marginStart="40dp"
        android:layout_marginTop="30dp"
        android:text="Send Info"
        android:onClick="sendInfo"
        />

</RelativeLayout>